<odoo>
    <record id="view_volleyball_player_tree" model="ir.ui.view">
        <field name="name">volleyball.player.tree</field>
        <field name="model">volleyball.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="position"/>
                <field name="skill_level"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_volleyball_player_form" model="ir.ui.view">
        <field name="name">volleyball.player.form</field>
        <field name="model">volleyball.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="position"/>
                        <field name="skill_level"/>
                        <field name="active"/>
                    </group>
                    <field name="session_ids" mode="kanban">
                        <tree>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="focus_area"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_volleyball_root" name="Volleyball"/>
    <menuitem id="menu_volleyball_players" name="Players" parent="menu_volleyball_root" action="action_volleyball_player"/>

    <record id="action_volleyball_player" model="ir.actions.act_window">
        <field name="name">Volleyball Players</field>
        <field name="res_model">volleyball.player</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>